doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Email Template tool
    link(rel="stylesheet", href="/styles/index.css")
    style.
      header {
        background-color: #4CAF50;
        padding: 20px;
        color: white;
        text-align: center;
        font-size: 24px;
      }
      footer {
        background-color: #333;
        color: white;
        padding: 15px;
        text-align: center;
        font-size: 18px;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin: 5px 0;
      }
      a {
        text-decoration: none;
        color: #4CAF50;
      }
      a:hover {
        color: #333;
      }
  body
    header
      h1 Email Template tool
    main
      ul
        each template in templates
          li
            a(href=`${template.replace('.pug', '.html')}`) #{template.replace('.pug', '')}
    footer
      p &copy; 2023 Your Company. All rights reserved.
