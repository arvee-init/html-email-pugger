doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Email Template tool
    link(rel="stylesheet", href="/styles/index.css")
  body
    header
        img(src="/assets/pug.svg", width="50px" alt="PUG logo").logo
        h1 Email Template tool
    main
        ul
            each template in templates
                li
                    a(href=`${template.replace('.pug', '.html')}`) #{template.replace('.pug', '')}
    footer
      p &copy; 2023 Your Company. All rights reserved.
